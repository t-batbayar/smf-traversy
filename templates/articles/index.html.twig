{% extends "base.html.twig" %}

{% block title %}Articles{% endblock %}

{% block body %}
    <a href="{{ path('article.create') }}" class="btn btn-primary float-right mb-3">Create a new article</a>
    {% if articles %}
        <table class="table table-striped" id="articles">
            <thead>
                <tr>
                    <th>Article Title</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for article in articles %}
                    <tr>
                        <td>{{ article.title }}</td>
                        <td>
                            <a href="{{ path('article.show', {id: article.id}) }}" class="btn btn-dark">Show</a>
                            <a href="{{ path('article.edit', {id: article.id }) }}" class="btn btn-light">Edit</a>
                            <a href="#/" class="btn btn-danger delete-article" data-id={{ article.id }}>Delete</a>
                        </td>
                    </tr>
                    
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>No article</p>
    {% endif %}    

{% endblock %}

{% block javascripts %}
    <script src="/js/main.js"></script>
{% endblock %}